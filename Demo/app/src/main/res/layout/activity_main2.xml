<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/sbtv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Different Streams In B.Tech"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <!-- GridLayout with 4 rows and 2 columns -->
    <GridLayout
        android:id="@+id/sbgl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sbtv1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:columnCount="2"
        android:rowCount="3">

        <!-- MBA Button -->
        <ImageButton
            android:id="@+id/sbibtn1"
            android:layout_width="9dp"
            android:layout_height="186dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:src="@drawable/mba"
            tools:ignore="ContentDescription" />

        <!-- EEE Button -->
        <ImageButton
            android:id="@+id/sbibtn2"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:src="@drawable/eee"
            tools:ignore="ContentDescription" />

        <!-- MECH Button -->
        <ImageButton
            android:id="@+id/sbibtn3"
            android:layout_width="0dp"
            android:layout_height="181dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:src="@drawable/mech"
            tools:ignore="ContentDescription" />

        <!-- IT Button -->
        <ImageButton
            android:id="@+id/sbibtn4"
            android:layout_width="0dp"
            android:layout_height="183dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:src="@drawable/it"
            tools:ignore="ContentDescription" />

        <!-- Business Button -->
        <ImageButton
            android:id="@+id/sbibtn5"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:src="@drawable/business"
            tools:ignore="ContentDescription" />

        <!-- Civil Button -->
        <ImageButton
            android:id="@+id/sbibtn6"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="10dp"
            android:src="@drawable/civil"
            tools:ignore="ContentDescription" />

    </GridLayout>

</RelativeLayout>