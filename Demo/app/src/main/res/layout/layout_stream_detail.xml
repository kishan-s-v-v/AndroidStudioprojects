<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/streamTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You selected Stream in B.Tech"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#000" />

    <!-- ImageView for Selected Stream -->
    <ImageView
        android:id="@+id/streamImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/streamTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Selected Stream Image" />
</RelativeLayout>